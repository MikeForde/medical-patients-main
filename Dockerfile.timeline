# 1) Build stage
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# 2) Production stage
FROM nginx:stable-alpine
COPY --from=builder /app/dist /usr/share/nginx/html
# Optional: drop the default nginx.conf and add your own to handle SPA
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]